<p>Find me in app/views/messages/add.html.erb</p>
<div class = "form-group" >
    <h1><%=@current_person.name%>'s<h1>
    <h1><%=@current_person.language_to_study%> diary<h1>
</div>
<%=form_for(@message, url:{controller:"messages",action:"create"}) do |form| %>
    <div class = "form-group" >
      <label for = "title">Title</label>
      <h4><%= form.text_field :title, class: "form-control" %></h4>
    </div>
    <div class = "form-group" >
      <label for = "content">Message</label>
      <h4><%= form.text_area :content, class: "form-control input_contetnt" %></h4>
    </div>
    <div class = "form-group" >
      <h4 class"content"><%= form.submit class:"btn btn-primary" %></h4>
    </div>
<% end %>