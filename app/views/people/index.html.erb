<table class="table">
 <tr>
   <th>Id</th><th>Name</th><th>Mail</th><th>Edit</th><th>Delete</th>
</tr>
<% @people.each do |obj| %>
    <tr>
      <td><%= obj.id %></td>
      <td><a href="/people/<%=obj.id%>"><%= obj.name %></a></td>
      <td><%= obj.email %></td>
      <td>
        <a href="/people/edit/<%= obj.id %>">Edit</a>
      </td>
      <td>
        <a href="javascript:delData(<%=obj.id %>);">Delete</a>
      </td>
    </tr>
<% end %>
      <script>
        function delData(num){
            if (confirm("このデータを削除しますか？")){
                document.location = "/people/delete/" + num;
            }
            return false;
        }
      </script>
    </table>